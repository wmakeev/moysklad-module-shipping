{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "browser": true
  },
  "rules": {
    "strict": 0,
    "quotes": [1, "single", "avoid-escape"],
    "no-multi-spaces": 0,
    "no-var": 1,
    "no-debugger": 1,
    "no-alert": 1,
    "no-console": 1,
    "valid-jsdoc": 1,
    "eqeqeq": [2, "smart"],
    "no-else-return": 1,
    "no-undefined": 1,
    "eqeqeq": [2, "smart"],

    "no-spaced-func": 1,
    "space-before-blocks": 1,
    "spaced-line-comment": [2, "always", {
        "exceptions": ["-"]
    }],
    "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
    "space-in-parens": [2, "never"],
    "comma-dangle": [1, "always-multiline"],
    "object-shorthand": 1
  }
}
